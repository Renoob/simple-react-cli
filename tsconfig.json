{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"],
            "FONTS/*": ["./src/fonts/*"],
			"ASSETS/*": ["./src/assets/*"],
			"COMPONENTS/*": ["./src/components/*"],
			"CONTAINERS/*": ["./src/containers/*"],
			"MOCK/*": ["./src/mock/*"],
			"MODULES/*": ["./src/modules/*"],
			"ROUTER/*": ["./src/router/*"],
			"STORE/*": ["./src/store/*"],
			"STYLES/*": ["./src/styles/*"],
			"UTILS/*": ["./src/utils/*"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}